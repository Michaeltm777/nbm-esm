    .sidebar h4 {
      margin-bottom: 20px;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
    }

    .sidebar ul li {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      cursor: pointer;
    }

    .sidebar ul li:hover {
      background: #e63946;
      color: #fff;
      transition: 0.3s;
    }

    /* استایل بخش نمایش کتاب‌ها */
    .book-list {
      flex-grow: 1;
      margin-left: 20px;
    }

    .book-item {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 15px;
      display: flex;
      align-items: center;
    }

    .book-item img {
      width: 80px;
      height: 100px;
      object-fit: cover;
      border-radius: 5px;
      margin-left: 15px;
    }

    .btn-download {
      background-color: #e63946;
      color: white;
      padding: 8px 15px;
      border-radius: 5px;
      text-decoration: none;
      font-size: 14px;
    }

    .btn-download:hover {
      background-color: #b92e38;
    }

    /* استایل برای موبایل */
    @media (max-width: 768px) {
      .library-container {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        margin-bottom: 20px;
      }
    }
  </style>
