      <!-- اسکریپت فیلتر کتاب‌ها -->
      <script>
        function filterBooks(category) {
          let books = document.querySelectorAll(".book-item");
          books.forEach((book) => {
            if (
              category === "all" ||
              book.getAttribute("data-category") === category
            ) {
              book.style.display = "flex";
            } else {
              book.style.display = "none";
            }
          });
        }
