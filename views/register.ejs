<!DOCTYPE html>
<html lang="fa" dir="rtl">

  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MEZ23JPF5J"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', 'G-MEZ23JPF5J');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ثبت‌نام</title>
    <link rel="stylesheet" href="/styles/reg.css" />
    <link rel="stylesheet" href="/styles/bootstrap.rtl.min.css" />
  </head>

  <body class="container">
    <%- include('partials/navbar') %>

      <main>
        <div class="main-1">
          <h2>فرم ثبت‌نام</h2>
          <form action="/register" method="POST">
            <div class="input-group">
              <label>نام:</label>
              <input type="text" name="name" required />
            </div>

            <div class="input-group">
              <label>نام خانوادگی:</label>
              <input type="text" name="lastname" required />
            </div>

            <div class="input-group">
              <label>جنسیت:</label>
              <select name="gender" required>
                <option value="male">مرد</option>
                <option value="female">زن</option>
              </select>
            </div>

            <div class="input-group">
              <label>سن:</label>
              <input type="number" name="date_of_birth" required />
            </div>

            <div class="input-group">
              <label>وضعیت تاهل:</label>
              <select name="marital_status" required>
                <option value="single">مجرد</option>
                <option value="married">متاهل</option>
                <option value="divorced">طلاق گرفته</option>
                <option value="widowed">بیوه</option>
              </select>
            </div>

            <div class="input-group">
              <label>ایمیل:</label>
              <input type="email" name="email" required />
            </div>

            <div class="input-group">
              <label>شماره تلفن:</label>
              <input type="tel" name="phone" required />
            </div>

            <div class="input-group">
              <label>شهر محل اقامت:</label>
              <input type="text" name="city" required />
            </div>

            <div class="input-group">
              <label>کشور محل اقامت:</label>
              <input type="text" name="country" required />
            </div>

            <div class="input-group">
              <label>رمز عبور:</label>
              <input type="password" name="password" required />
            </div>

            <div>
              <button type="submit">ثبت‌نام</button>
              <a class="login-link" href="login">ورود به سایت</a>
            </div>
          </form>
        </div>
      </main>

      <%- include('partials/footer') %>
  </body>

</html>