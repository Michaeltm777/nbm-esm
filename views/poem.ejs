    <title>اشعار و ادبیات | Poetry</title>
    <!-- لینک به Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
      html {
        background-color: rgb(226, 224, 221);
      }

      /* استایل‌های سفارشی */
      body {
        /* background-color: #f8f9fa; */
        color: #333;
      }

      .sidebar {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        height: 100%;
      }

      .sidebar h4 {
        margin-bottom: 20px;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
      }

      .sidebar ul li {
        margin-bottom: 10px;
      }

      .sidebar ul li a {
        text-decoration: none;
        color: #e63946;
        transition: 0.3s;
      }

      .sidebar ul li a:hover {
        color: #b92e38;
      }

      .poetry-content {
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }

      .poetry-title {
        color: #e63946;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .poetry-text {
        font-size: 18px;
        line-height: 1.8;
        margin-bottom: 20px;
      }
    </style>
